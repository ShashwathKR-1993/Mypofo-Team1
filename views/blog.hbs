<div class="container" style="margin-top:30px">
    <H1>Here you go :My Blogs</H1>
    {{{extraHtml}}}
    <div class="row"> <!-- 12 cols -->
        <!-- list of project -->
        <!-- 
            Loop through the data and create the divs
        -->
        {{#each posts}}
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <a href="/blog/{{_id}}">
                        <img src="{{image}}" class="card-img-top" alt="...">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{description}}</p>
                        <a href="/blog/{{_id}}" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>