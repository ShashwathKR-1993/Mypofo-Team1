<div class="container" class="container-fluid" style="background-image:url(../images/brown-on-seashore-near-mountain-1007657 (1).jpg);"> 
    <div class="row">
        <div class="col-md-3 mt-10" style="border-right: 2px solid brown;">
            <img class="img-fluid" src="/images/Profile image 320.jpg">
          <h1>Get In Touch With Us</h1> 
           <div class="col-md-4 col-sm-6 col-xs-12">
            <ul class="social-icons" style="    display: inline-flex;">
              <li><a class="facebook" href="#"><i class="fa fa-facebook"></i></a></li>
              <li><a class="twitter" href="#"><i class="fa fa-twitter"></i></a></li>
              <li><a class="dribbble" href="#"><i class="fa fa-dribbble"></i></a></li>
              <li><a class="linkedin" href="#"><i class="fa fa-linkedin"></i></a></li>   
            </ul>
          </div>
        </div>
        <hr>

        <div class="col-md-9 mt-5 mb-5">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item bc-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item" aria-current="page">Contact</li>
                </ol>
            </nav>
            <div class="project-sidebar-block">
                
                <form action="/contact" method="POST">
                    <div class="mb-4">
                        <h1 class="h3 mb-3 font-weight-normal">Contact Us</h1>
                    </div>
                    <hr>
                    <br>
                    {{#if errors}}
                        {{#each messages}}
                        <div class="alert alert-danger" role="alert">
                            {{this}}
                        </div>
                        {{/each}}
                    {{/if}}
                    {{#if success}}
                        <div class="alert alert-success" role="alert">
                            Thank you for contacting us. We will get back at the earliest.
                        </div>
                    {{/if}}
                    <div class="form-label-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" class="form-control" placeholder="Name" autofocus
                            required value="{{name}}">
                    </div>

                    <div class="form-label-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email address"
                           value="{{email}}" >
                    </div>

                    <div class="form-label-group">
                        <label for="mobile">Mobile</label>
                        <input type="number" name="mobile" id="mobile" class="form-control" placeholder="Mobile"
                            value="{{mobile}}">
                    </div>

                    <div class="form-label-group">
                        <br>
                        <textarea name="description" id="description" rows="5" class="form-control"
                            placeholder="Description">{{description}}</textarea>
                    </div>

                    <div class="form-label-group">
                        <br>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>